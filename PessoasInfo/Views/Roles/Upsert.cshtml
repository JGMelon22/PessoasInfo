@model IdentityRole

@{
    var title = "Criar Novo Cargo";
}

<form method="post">
    @if (Model != null && !string.IsNullOrEmpty(Model.Id))
    {
        title = "Editar Cargo";
        <input asp-for="@Model.Id" hidden/>
    }

    <div class="border p-3 bg-white">
        <div class="form-group row">
            <h3 class="text-info pl-3">@title</h3>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row py-2 ">
                    <div class="col-4">
                        <label class="text-primary" asp-for="Id"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Id" readonly class="form-control"/>
                    </div>
                </div>
                <div class="form-group row py-2 ">
                    <div class="col-4">
                        <label class="text-primary" asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control" autocomplete="off"/>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row py-2 ">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            @if (Model != null && !string.IsNullOrEmpty(Model.Id))
                            {
                                // Atualiza
                                <input type="submit" class="btn btn-info rounded-pill w-100" value="Atualizar"/>
                            }
                            else
                            {
                                // Criar
                                <input type="submit" class="btn btn-primary rounded-pill w-100" value="Criar"/>
                            }
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success rounded-pill w-100">Retornar</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>