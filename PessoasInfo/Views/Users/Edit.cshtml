@model AppUser

<h3 class="text-info">Editar Usuário</h3>

<div class="row">
    <div class="col-md-6">
        <form method="post" asp-action="Edit">
            <input asp-for="@Model.Id" hidden/>
            <hr/>
            <div asp-validation-summary="All" class="text-danger"></div>

            <div accesskey="form-group">
                <label>Nome Usuário</label>
                <input asp-for="UserName" readonly class="form-control"/>
                <input asp-for="UserName" hidden/>
            </div>

            <div accesskey="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" readonly class="form-control"/>
                <input asp-for="Email" hidden/>
            </div>

            <div class="form-group">
                <label>Perfil</label>
                <select asp-for="RoleId" asp-items="@Model.RoleList" class="form-control">
                    <option disabled selected>--Selecione um Perfil--</option>
                </select>
            </div>
            <h4></h4>
            <div accesskey="form-group">
                <button type="submit" class="btn btn-success">Atualizar</button>
                <a asp-action="Index" class="btn btn-warning" style="width: auto">Retornar a Lista de Usuário</a>
            </div>
        </form>
    </div>
</div>