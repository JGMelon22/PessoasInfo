@model IEnumerable<PessoasInfo.ViewModels.Detalhe.DetalheIndexViewModel>

<h3 class="text-success">Top @Model.Count() Registros Tabela Detalhes</h3>
<br/>

<form asp-action="Index" method="get">
    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.IdPessoa)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.DetalheTexto)
            </td>
            <td>
                Opções
            </td>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdPessoa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DetalheTexto)
                </td>
                <td>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.IdDetalhe">Deletar</a>
                    <a class="btn btn-sm btn-primary" asp-action="Details" asp-route-id="@item.IdDetalhe">Detalhes</a>
                    <a class="btn btn-sm btn-success" asp-action="Edit" asp-route-id="@item.IdDetalhe">Editar</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</form>