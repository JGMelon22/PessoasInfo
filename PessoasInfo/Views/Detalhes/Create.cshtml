@model PessoasInfo.ViewModels.Detalhe.DetalheCreateViewModel

<h3>Adicionar novo detalhe</h3>
<hr/>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdPessoa" class="control-label"></label>
                <input asp-for="IdPessoa" type="number" min="1" class="form-control"/>
                <span asp-validation-for="IdPessoa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DetalheTexto" class="control-label"></label>
                <textarea asp-for="DetalheTexto" class="form-control" style="min-width: 100%"></textarea>
                <span asp-validation-for="DetalheTexto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h4></h4>
                <input type="submit" value="Registrar" class="btn btn-success"/>
            </div>
        </form>
    </div>
</div>

@section Scripts
{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}