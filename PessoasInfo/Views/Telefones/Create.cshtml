@model PessoasInfo.ViewModels.Telefone.TelefoneCreateViewModel

<h3>Adicionar novo telefone</h3>
<hr/>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PessoaId" class="control-label"></label>
                <input asp-for="PessoaId" type="number" min="1" class="form-control"/>
                <span asp-validation-for="PessoaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TelefoneTexto" class="control-label"></label>
                <input asp-for="TelefoneTexto" type="number" class="form-control"/>
                <span asp-validation-for="TelefoneTexto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ativo" class="control-label"></label>
                @Html.CheckBoxFor(model => model.Ativo)
                @* <input class="form-check-input"  asp-for="Ativo" type="checkbox" value=""> *@
                <span asp-validation-for="PessoaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h4></h4>
                <input type="submit" value="Registrar" class="btn btn-success"/>
            </div>
        </form>
    </div>
</div>

@section Scripts
{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}