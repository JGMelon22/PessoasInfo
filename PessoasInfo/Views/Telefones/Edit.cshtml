@model PessoasInfo.ViewModels.Telefone.TelefoneIndexlViewModel

<h3 class="text-decoration-underline">Editar Dados</h3>
<hr/>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdTelefone"/>
            <div class="form-group">
                <label asp-for="PessoaId" class="control-label"></label>
                <input asp-for="PessoaId" class="form-control"/>
                <span asp-validation-for="PessoaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TelefoneTexto" class="control-label"></label>
                <textarea asp-for="TelefoneTexto" type="number" class="form-control"></textarea>
                <span asp-validation-for="TelefoneTexto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ativo" class="control-label"></label>
                @Html.CheckBoxFor(model => model.Ativo)
                <span asp-validation-for="Ativo" class="text-danger"></span>
            </div>
            <h4></h4>
            <div class="form-group">
                <input type="submit" value="Salvar Edição" class="btn btn-success"/>
            </div>
        </form>
    </div>
</div>
<h4></h4>

<div>
    <a asp-action="Index" class="btn btn-sm btn-primary">Retornar a Listagem</a>
</div>

@section Scripts
{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}