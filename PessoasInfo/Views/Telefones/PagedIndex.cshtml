@using Microsoft.AspNetCore.Mvc.TagHelpers
@model ReflectionIT.Mvc.Paging.PagingList<PessoasInfo.ViewModels.Telefone.TelefoneIndexlViewModel>

<h3 class="text-decoration-underline fst-italic">Registros Tabela Telefones</h3>
<br/>

<nav aria-label="Telefones navigation example">
    @await Component.InvokeAsync("Pager", new { pagingList = Model })
</nav>

<form asp-action="PagedIndex" method="get">
    <div>
        Buscar por um Telefone: <input type="number" name="searchString" value="@ViewBag.CurrentFilter"/>
        <input class="btn btn-success btn-sm" type="submit" value="Pesquisar"/>
        <a class="btn btn-light btn-sm border" asp-action="PagedIndex">Limpar Filtro</a>
    </div>
    <h4></h4>
    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>
                <a id="idLink" class="text-black" asp-action="PagedIndex" asp-route-sortOrder="@ViewBag.IdSortParam">@Html.DisplayName("Id Telefone")</a>
            </th>
            <th>
                <a id="telefoneLink" class="text-black" asp-action="PagedIndex" asp-route-sortOrder="@ViewBag.TelefoneSortParam">@Html.DisplayName("Num. Telefone")</a>
            </th>
            <th>
                <a id="ativoLink" class="text-black" asp-action="PagedIndex" asp-route-sortOrder="@ViewBag.AtivoSortParam">@Html.DisplayName("Ativo?")</a>
            </th>
            <th>
                Opções
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdTelefone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TelefoneTexto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ativo)
                </td>
                <td>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.IdTelefone">Deletar</a>
                    <a class="btn btn-sm btn-primary" asp-action="Details" asp-route-id="@item.IdTelefone">Detalhes</a>
                    <a class="btn btn-sm btn-success" asp-action="Edit" asp-route-id="@item.IdTelefone">Editar</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</form>