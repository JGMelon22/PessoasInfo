@model IEnumerable<PessoasInfo.ViewModels.Telefone.TelefoneIndexlViewModel>

<h3 class="text-success">Top @Model.Count() Registros Tabela Telefones</h3>
<br/>

<form asp-action="Index" method="get">
    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.IdTelefone)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.TelefoneTexto)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.Ativo)
            </td>
            <td>
                Opções
            </td>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdTelefone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TelefoneTexto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ativo)
                </td>
                <td>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.IdTelefone">Deletar</a>
                    <a class="btn btn-sm btn-primary" asp-action="Details" asp-route-id="@item.IdTelefone">Detalhes</a>
                    <a class="btn btn-sm btn-success" asp-action="Edit" asp-route-id="@item.IdTelefone">Editar</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</form>