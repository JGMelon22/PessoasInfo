@model PessoasInfo.ViewModels.Pessoa.PessoaIndexViewModel

<h4>Deseja deletar "@Model.Nome" do sistema?</h4>
<div>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IdPessoa"/>
        <input type="submit" value="Deletar" class="btn btn-danger"/>
        <a asp-action="Index" class="btn btn-sm btn-primary">Retornar a Listagem</a>
    </form>
</div>