@model PessoasInfo.ViewModels.Pessoa.PessoaIndexViewModel

<h3 class="text-decoration-underline">Editar Dados</h3>
<hr/>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdPessoa"/>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control"/>
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <h4></h4>
            <div class="form-group">
                <input type="submit" value="Salvar Edição" class="btn btn-success"/>
            </div>
        </form>
    </div>
</div>
<h4></h4>
<div>
    <a asp-action="Index" class="btn btn-success btn-primary">Retornas a Listagem</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}